<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MoedaAFragment">

    <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="@string/usd"
            android:ems="10"
            android:id="@+id/edFrom" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/tvTo" android:fontFamily="@font/roboto"
            android:textAlignment="center"/>
    <Button
            android:text="@string/converter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btConverter" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edFrom" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:hint="@string/brl"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/tvTo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/edFrom"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5" android:fontFamily="@font/roboto" android:textSize="18sp"
            android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>